pipeline {
    agent any
    tools {
        terraform 'terraform'
    }
    parameters {
        choice(name: 'ACTION', choices: ['apply', 'destroy'], description: 'Choose apply or destroy')
        string(name: 'BRANCH_NAME', defaultValue: 'SCRUM-504-kawalpreetkour', description: 'Git branch to use')
    }
    stages {
        stage('Checkout SCM') {
            steps {
                git branch: "${params.BRANCH_NAME}",
                    url: 'https://github.com/Snaatak-Cloudops-Crew/IAC-Terraform-repo.git',
                    credentialsId: 'git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir("Wrappercode/Env/Dev/Applications/Attendance-App") {  
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'AWS_Configure']]) {
                        sh 'terraform init'
                    }
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir("Wrappercode/Env/Dev/Applications/Attendance-App") {
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'AWS_Configure']]) {
                        sh 'terraform plan'
                    }
                }
            }
        }

        stage('Terraform Apply/Destroy') {
            steps {
                dir("Wrappercode/Env/Dev/Applications/Attendance-App") {
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'AWS_Configure']]) {
                        script {
                            if (params.ACTION == 'apply') {
                                sh 'terraform apply -auto-approve'
                            } else {
                                sh 'terraform destroy -auto-approve'
                            }
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo " Terraform ${params.ACTION} completed successfully!"
        }
        failure {
            echo " Terraform ${params.ACTION} failed!"
        }
    }
}
